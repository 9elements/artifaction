---
import { people } from "./people"
import cx from "classnames"
import styles from "./styles.module.css"
---



<ul class={cx(styles.grid, "section")}>
  {people.map(({ firstName, lastName, imageName, insta, twitter }) => (
    <li class={styles.person} itemscope itemtype="https://schema.org/Person">
      <picture>
        <source srcset={`/images/people/${imageName}.avif`} type="image/avif" />
        <source srcset={`/images/people/${imageName}.webp`} type="image/webp" />
        <img
          src={`/images/people/${imageName}.jpg`}
          width="400"
          height="400"
          loading="lazy"
          decoding="async"
          alt=""
          class={styles.portrait}
        />
      </picture>
      <h3 itemprop="name" class={styles.name}>
        {firstName} <br> {lastName}
      </h3>
      {twitter && (
        <a
          itemprop="url"
          href={`https://twitter.com/${twitter}`}
          aria-label={`Follow ${firstName} on Twitter (@${twitter})`}
          class={styles.social}
        >
          @{twitter}
        </a>
      )}
      {insta && (
        <a
          itemprop="url"
          href={`https://instagram.com/${insta}`}
          aria-label={`Follow ${firstName} on Instagram (@${insta})`}
          class={styles.social}
        >
          @{insta}
        </a>
      )}
    </li>
  ))}
</ul>
