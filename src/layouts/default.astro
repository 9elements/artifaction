---
import Header from "../components/Header/index.astro"
import Footer from "../components/Footer/index.astro"

import "../styles/global.css"

const { title, description } = Astro.props
const pageDescription =
  description ||
  "A generative project that creates unique visual objects through the random composition of different geometric artifacts. You can generated new visuals by your own with a single click. Don't like it? Just click again – then the first one is lost forever, but the next one might be so beautiful that it could become your next tattoo."
const pageTitle = `${title ? `${title} –` : ""} ARTIFACTION`
const hash = Math.random().toString().substring(2, 12)
---

<!-- TODO: Proper Meta description and Image -->

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href={`./favicons/favicon.png?${hash}`}
      type="image/png"
      sizes="any"
    />
    <link
      rel="icon"
      href={`./favicons/favicon-frame-06.svg?${hash}`}
      type="image/svg+xml"
    />

    <title>{pageTitle}</title>

    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />

    <meta name="og:title" content={pageTitle} />
    <meta name="og:description" content={pageDescription} />
    <!-- TODO: <meta name="og:image" content="..." /> -->

    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:card" content="summary_large_image" />

    <meta name="theme-color" content="#1D1D1B" />
  </head>

  <body>
    <div aria-hidden class="overlay"></div>

    <Header />

    <slot />

    <Footer />

    <script src="./js/p5.min.js"></script>
    <script src="./js/aos.js"></script>
    <script>AOS.init() </script>
    <script src="./js/favicon.min.js"></script>
    <script>
      // Safari can't handle SVG favicons :(
      // So only apply favicon animation in non-safari browsers
      if (window.safari === undefined) {
        favicon.animate(
          [
            "./favicons/favicon-frame-01.svg",
            "./favicons/favicon-frame-02.svg",
            "./favicons/favicon-frame-03.svg",
            "./favicons/favicon-frame-04.svg",
            "./favicons/favicon-frame-05.svg",
            "./favicons/favicon-frame-06.svg",
            "./favicons/favicon-frame-07.svg",
            "./favicons/favicon-frame-08.svg",
          ],
          1100
        )
      }
    </script>
  </body>
</html>
