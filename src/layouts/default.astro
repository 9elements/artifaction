---
import Header from "../components/Header/index.astro"
import Footer from "../components/Footer/index.astro"

import "../styles/global.css"

const { title, description } = Astro.props
const pageDescription =
  description ||
  "A generative project that creates unique visual objects through the random composition of different geometric artifacts. You can generated new visuals by your own with a single click. Don't like it? Just click again – then the first one is lost forever, but the next one might be so beautiful that it could become your next tattoo."
const pageTitle = `${title ? `${title} –` : ""} ARTIFICATION`
---

<!-- TODO: Proper Meta description and Image -->

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="favicon.png" />
    <title>{pageTitle}</title>

    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDescription} />

    <meta name="og:title" content={pageTitle} />
    <meta name="og:description" content={pageDescription} />
    <!-- TODO: <meta name="og:image" content="..." /> -->

    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>

  <body>
    <div aria-hidden class="overlay"></div>

    <Header />

    <slot />

    <Footer />
  </body>
</html>

<style>
  .overlay {
    position: fixed;
    inset: 0;
    user-select: none;
    opacity: 0.5;
    pointer-events: none;
    background-image: url("../img/pixel-grain.png");
    mix-blend-mode: multiply;
    background-size: 22rem 30rem;
    background-repeat: repeat;
  }
</style>
